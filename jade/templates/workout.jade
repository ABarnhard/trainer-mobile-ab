ion-view(view-title='HIIT It')
  ion-nav-buttons(side='primary')
    a.button(href='#/tab/dash') Exit
  ion-nav-buttons(side='secondary')
    button.button(ng-click='prevSlide()') Prev
    button.button(ng-click='nextSlide()') Next
  ion-content
    ion-slide-box(delegate-handle='wkSlider', show-pager='false', active-slide='slidestop($index)')
      ion-slide
        .box(style='background-color:red;')
          button.button.button-block.button-positive(ng-click='startWorkout()') Start {{workout.workoutName}}
          table.workout-table
            tbody
              tr(ng-repeat='set in workout.sets')
                td(colspan='5', style='text-align:center;')
                  table.exercise-table(style='display:inline-block;')
                    thead
                      tr(ng-show='$index === 0')
                        th(style='width:32px;') Sets
                        th(style='text-align:left;width:130px;') Exercises
                        th(style='width:50px;') Reps
                        th(style='width:60px;') Weight
                        th(style='width:50px;') Rest
                      tr(ng-show='$index !== 0')
                        th(style='width:32px;')
                        th(style='width:130px;')
                        th(style='width:50px;')
                        th(style='width:60px;')
                        th(style='width:50px;')
                    tbody(style='font-size:.8em;')
                      tr(ng-repeat='exercise in set.exercises')
                        td {{$index === 0 ? set.count : ' '}}
                        td(style='text-align:left;') {{exercise.name}}
                        td {{exercise.reps}} {{exercise.type}} 
                        td {{exercise.weight}} lbs
                        td {{$index === 0 ? set.rest + ' Sec' : ' '}}
      ion-slide
        .box(style='background-color:blue;')
          h1 Slide 2
